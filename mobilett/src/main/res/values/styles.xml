<resources>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="hours_cell" >
        <item name="android:layout_weight" >1</item>
        <item name="android:background" >@color/white</item>
        <item name="android:gravity" >center</item>
        <item name="android:textSize">@dimen/text_table_small_size</item>
        <item name="android:textColor" >@color/gray</item>
        <item name="android:minHeight" >@dimen/cell_table_min_height</item>
        <item name="android:layout_marginTop">@dimen/cell_table_margin</item>
    </style>
    <style name="hours_cell_content" >
        <item name="android:layout_weight" >1</item>
        <item name="android:background" >@color/black</item>
        <item name="android:gravity" >center</item>
        <item name="android:textColor" >@color/white</item>
        <item name="android:minHeight" >@dimen/cell_table_min_height</item>
        <item name="android:layout_marginTop">@dimen/cell_table_margin</item>
        <item name="android:layout_marginLeft">@dimen/cell_table_margin</item>
    </style>
    <style name="days_cell_header" >
        <item name="android:layout_weight">1</item>
        <item name="android:background" >@color/green</item>
        <item name="android:gravity" >center</item>
        <item name="android:textColor" >@color/black</item>
        <item name="android:textSize">@dimen/text_table_small_size</item>
        <item name="android:minHeight" >@dimen/header_table_min_height</item>
    </style>
    <style name="days_cell_header_inner" parent="@style/days_cell_header" >
        <item name="android:layout_marginRight">@dimen/cell_table_margin</item>
    </style>
  
</resources>
