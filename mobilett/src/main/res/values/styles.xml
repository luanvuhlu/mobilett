<resources>

    <style name="AppTheme" parent="AppBaseTheme">
    </style>
    <style name="hours_item">
        <item name="android:background" >@color/white</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_small_size</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="hours_text" parent="hours_item">
    <item name="android:background" >@color/light_blue</item>
    <item name="android:textSize">@dimen/text_small_size</item>
    <item name="android:textColor">@color/white</item>
</style>
    <style name="subject_name" parent="hours_text">
        <!--<item name="android:layout_marginBottom">1sp</item>-->
    </style>
    <style name="hours_row">
        <item name="android:background">@color/black</item>
    </style>

    <style name="center_text" >
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="date_text" >
        <item name="android:textColor">@color/background_material_light</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/accent_material_light</item>
        <item name="android:textSize">@dimen/text_large_size</item>
    </style>
    <style name="subject_title" parent="left_margin_text" >
        <item name="android:textSize">@dimen/text_large_size</item>
        <item name="android:textStyle">bold</item>
    </style>
